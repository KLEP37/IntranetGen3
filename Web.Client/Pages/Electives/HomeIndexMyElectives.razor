<AuthorizeView Roles="@nameof(Role.Student)">
    @if (studentsProgress is not null)
    {
        @if (studentsProgress.MeetsAllCriteria)
        {
            <text>Meets all criteria!</text>
        }

        @if (studentsProgress.RequiresCspOrCpValidation)
        {
            @if (studentsProgress.MeetsCsOrCpCriteria)
            {
                <text>Meets all Csp or Cp criteria!</text>
            }

            <text>@($"{studentsProgress.AmOfDonatedHoursInCspOrCp} / {studentsProgress.RequiredAmOfDonatedHoursInCspOrCp}")</text>
        }
    }
