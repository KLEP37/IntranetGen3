@if (studentsProgress is not null)
{
    @if (studentsRegistrationForThisSubject is not null)
    {
        // Registered already
        <HxButton 
            Text="Zrušit primární zápis"
            OnClick="async () => await HandleCancelRegistrationClicked()"
            Color="ThemeColor.Primary"
            Outline="true" 
            Size="ButtonSize.Small" 
            Icon="BootstrapIcon.Trash" />
    }
    else if (!isRegistrationPossible)
    {
        // Registration not possible
        <b>Už máte naplněné podmínky registrace</b>
    }
    else
    {
        // No registration
        <HxButton
            Text="Zapsat jako primární"
            OnClick="async () => await HandleCreateRegistrationClicked(StudentRegistrationType.Main)" 
            Color="ThemeColor.Primary"
            Size="ButtonSize.Small"
            Icon="BootstrapIcon.Basket" />
    }
}
else
{
    <HxSpinner Color="ThemeColor.Primary" Size="SpinnerSize.Small" />
}