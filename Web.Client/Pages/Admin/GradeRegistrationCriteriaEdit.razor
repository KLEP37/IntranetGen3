<HxOffcanvas @ref="hxOffcanvas" 
             Title="@($"Kritéria - {GradesDataStore.GetByKeyOrDefault(model.GradeId)?.Name}")"
             OnClosed="this.OnClosed"
             Size='OffcanvasSize.Large'>
    <BodyTemplate>
        <EditForm EditContext="editContext">
            <FluentValidationValidator/>
            
            <HxInputNumber Label="Počet hodin v rozvrhu (kromě jazyků)" TValue="int" @bind-Value="model.RequiredTotalAmountOfDonatedHoursExcludingLanguage" />
            
            <HxInputCheckbox Label="Vyžaduje cizí jazyk?" @bind-Value="model.RequiresForeignLanguage"/>
            <HxInputCheckbox Label="Cizí jazyk místo hodin?" @bind-Value="model.CanUseForeignLanguageInsteadOfDonatedHours" />

            <HxInputCheckbox Label="Kontrola ČSP/ČS?" @bind-Value="model.RequiresCspOrCpValidation" />
            <HxInputNumber Label="Alespoň hodin z ČSP/ČS" TValue="int" @bind-Value="model.RequiredAmountOfDonatedHoursInAreaCspOrCp" />
        </EditForm>
    </BodyTemplate>
    <FooterTemplate>
        <SaveButton EditContext="editContext" OnValidClick="HandleValidSubmit"/>
    </FooterTemplate>
</HxOffcanvas>