@inject NavigationManager NavigationManager

<LayoutView Layout="@typeof(MainLayout)">

	<center>
		<p style="border-radius: 25px;
					   background: #73AD21;
					   padding: 20px;
					   width: fit-content;
					   height: fit-content;">
			Chyba 404 <br />
			Je nám líto, ale hledanou stránku se nepodařilo najít.<br />
			<HxButton Text="Zpět na hlavní stránku" Color="ThemeColor.Success" OnClick="HandleBackClick" CssClass="mt-3 mb-2" />
		</p>
	</center>


</LayoutView>

@code {
	public void HandleBackClick() {
		NavigationManager.NavigateTo("/");
	}
}
