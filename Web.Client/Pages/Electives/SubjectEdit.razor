<HxOffcanvas @ref="offcanvasComponent" Title="@SubjectId.ToString()" OnClosed="this.OnClosed">
    <BodyTemplate>
        <EditForm EditContext="editContext">
            <HxInputText @bind-Value="model.Name" Label="Název" />
        </EditForm>
    </BodyTemplate>
    <FooterTemplate>
		<SaveButton EditContext="editContext" IsNew="(model.SubjectId == default)" OnValidClick="HandleValidSubmit" />
    </FooterTemplate>
</HxOffcanvas>